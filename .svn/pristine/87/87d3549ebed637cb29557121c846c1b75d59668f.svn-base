<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    tools:context="com.example.tingpan.grpproject.ReadyToPort">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="88dp"
        android:layout_marginTop="164dp"
        android:contentDescription="@string/logoImg"
        android:src="@drawable/ready"
        android:layout_alignParentStart="true" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="32dp"
            android:contentDescription="@string/logoImg"
            android:src="@drawable/porttext"
            android:layout_alignParentStart="true" />

        <TextView
            android:id = "@+id/portGame"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textColor="@color/white"
            android:text = "Something.js"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:gravity="center"
            android:textSize="20dp"

        />


        <Button
            android:layout_marginTop="20dp"
            android:textSize="48px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/importantbutton"
            android:text="@string/Comfirm"
            android:onClick="startPort"
        />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:text="@string/bottomSlogen" />

    </LinearLayout>
</RelativeLayout>
