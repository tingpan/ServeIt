<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/portBackground"
    tools:context="com.example.tingpan.grpproject.PortGame">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="88dp"
        android:layout_marginTop="164dp"
        android:contentDescription="@string/logoImg"
        android:src="@drawable/ready"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/qrcode"
        android:onClick="displayQR"
    />

    <ImageView
        android:id="@+id/star"
        android:layout_marginTop="136dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/star"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id = "@+id/portTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text = "00:00:00"
            android:gravity="center"
            android:textSize="40dp"
            android:textColor="@color/white"
         />

        <TextView
            android:layout_marginTop="24dp"
            android:id = "@+id/ipAddress"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text = "IP : 10.220.56.01"
            android:gravity="center"
            android:textSize="18dp"
         />

        <TextView
            android:id = "@+id/portNumber"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:text = "Port : 23604"
            android:gravity="center"
            android:textSize="18dp"
        />

        <Button
            android:layout_marginTop="40dp"
            android:textSize="48px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/terminatebutton"
            android:text="Terminate"
            android:onClick="terminatePort"
            />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:text="@string/bottomSlogen"
         />



    </LinearLayout>

</RelativeLayout>
