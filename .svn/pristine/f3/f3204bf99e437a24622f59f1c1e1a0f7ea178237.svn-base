<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    tools:context=".Launch"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/logoImg"
        android:layout_weight="1.3"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/logoImg"
        android:src="@drawable/logo2"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/logoImg"
         />

          <Button
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/importantbutton"
            android:text="@string/launchStart"
            android:onClick="chooseGame"/>

        <TextView
            android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/logoImg"
         />

        <Button
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/smallbutton"
            android:text="@string/LaunchSetting"
            android:onClick="setting"
            android:textColor="@color/textColor" />

        <TextView
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="8dp"
            android:text="@string/bottomSlogen" />

    </LinearLayout>
</LinearLayout>
